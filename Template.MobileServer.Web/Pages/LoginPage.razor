@page "/login"
@inherits AppComponentBase
@layout SimpleLayout

<PageTitle>Login</PageTitle>

<MudPaper Class="pa-4" Style="width: 360px">
    <EditForm Model="form" OnValidSubmit="OnValidSubmit">
        <FluentValidationValidator Validator="Validator" />
        <CustomValidator @ref="customValidator" />

        <MudGrid Spacing="1">
            <MudItem xs="12" Class="d-flex justify-center">
                <MudText Typo="Typo.h4">Login</MudText>
            </MudItem>
            <MudItem xs="12" Class="d-flex justify-center">
                <MudTextField @bind-Value="form.Id" For="() => form.Id" MaxLength="Length.Id"
                              Label="ID" Variant="Variant.Outlined" Margin="Margin.Dense" />
            </MudItem>
            <MudItem xs="12" Class="d-flex justify-center">
                <MudTextField @bind-Value="form.Password" For="() => form.Password" MaxLength="Length.Password"
                              Label="Password" Variant="Variant.Outlined" Margin="Margin.Dense"
                              InputType="PasswordInputType(passwordVisible)" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon(passwordVisible)" OnAdornmentClick="TogglePasswordVisibility" />
            </MudItem>
            <MudItem xs="12" Class="d-flex justify-center">
                <MudButton ButtonType="ButtonType.Submit" Class="btn-full" EndIcon="@Icons.Material.Filled.Login" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large">Login</MudButton>
            </MudItem>
            <Condition Value="!String.IsNullOrEmpty(errorMessage)">
                <MudItem xs="12" Class="d-flex flex-column">
                    <MudAlert Severity="Severity.Error" NoIcon="true" ContentAlignment="HorizontalAlignment.Center">@errorMessage</MudAlert>
                </MudItem>
            </Condition>
        </MudGrid>
    </EditForm>
</MudPaper>
