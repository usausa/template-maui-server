<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <ProgressView>
                <ExtendedAuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" NotAuthorizedLayout="@typeof(SimpleLayout)">
                    <NotAuthorized>
                        @if (context.User.Identity?.IsAuthenticated != true)
                        {
                            <Template.MobileServer.Web.Pages.LoginPage Reload="true" />
                        }
                        else
                        {
                            <Error403 />
                        }
                    </NotAuthorized>
                </ExtendedAuthorizeRouteView>
            </ProgressView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(SimpleLayout)">
                <Error404 />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
